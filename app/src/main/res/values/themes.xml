<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Monarch" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/main</item>
        <item name="android:colorAccent">@color/main</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenBackground">@color/main</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Monarch</item>
    </style>

</resources>